<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Logs</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white min-h-screen">
  <div class="max-w-7xl mx-auto p-6">
    <h1 class="text-4xl font-bold text-cyan-400 mb-8">Admin Logs</h1>
    <div class="overflow-x-auto">
      <table class="table-auto w-full text-left bg-blue-950 rounded-lg overflow-hidden">
        <thead class="bg-blue-800 text-cyan-300">
          <tr>
            <th class="px-4 py-2">Log ID</th>
            <th class="px-4 py-2">Admin ID</th>
            <th class="px-4 py-2">Action</th>
            <th class="px-4 py-2">Timestamp</th>
          </tr>
        </thead>
        <tbody>
          <% logs.forEach(log => { %>
            <tr class="border-b border-gray-700">
              <td class="px-4 py-2"><%= log.id %></td>
              <td class="px-4 py-2"><%= log.admin_id %></td>
              <td class="px-4 py-2"><%= log.action %></td>
              <td class="px-4 py-2"><%= new Date(log.created_at).toLocaleString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
