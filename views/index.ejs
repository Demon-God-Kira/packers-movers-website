<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>New_world Packers and Movers</title>
    <link rel="icon" href="https://cdn-icons-png.flaticon.com/512/888/888879.png"/>

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- AOS for animations -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet"/>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    <!-- Custom Fonts and Styles -->
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700&family=Roboto:wght@300;400;700&display=swap');

      .title-font {
        font-family: 'Orbitron', sans-serif;
      }

      body {
        font-family: 'Roboto', sans-serif;
      }

      /* Navbar item animation */
      .nav-item {
        position: relative;
        display: inline-block;
        padding: 5px 10px;
        transition: all 0.3s ease-in-out;
      }

      .nav-item::after {
        content: '';
        position: absolute;
        width: 100%;
        height: 2px;
        background-color: #3498db;
        bottom: 0;
        left: 0;
        transform: scaleX(0);
        transform-origin: bottom right;
        transition: transform 0.25s ease-out;
      }

      .nav-item:hover::after {
        transform: scaleX(1);
        transform-origin: bottom left;
      }

      .nav-item:hover {
        color: #3498db;
        transform: translateY(-5px);
      }

      .login-button, .book-now-button {
        position: relative;
        display: inline-block;
        padding: 10px 20px;
        background: linear-gradient(135deg, #3498db, #2980b9);
        color: white;
        font-weight: bold;
        border-radius: 30px;
        font-size: 18px;
        transition: all 0.3s ease;
        overflow: hidden;
        box-shadow: 0 0 15px rgba(52, 152, 219, 0.6);
      }

      .login-button::before, .book-now-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(255, 255, 255, 0.2);
        border-radius: 30px;
        transition: all 0.3s ease;
        transform: scale(0);
        transform-origin: center;
      }

      .login-button:hover, .book-now-button:hover {
        background: linear-gradient(135deg, #2c3e50, #3498db);
        transform: scale(1.05) translateY(-2px);
        animation: bounce 0.3s ease;
      }

      .login-button:hover::before, .book-now-button:hover::before {
        transform: scale(1);
      }

      .login-button span, .book-now-button span {
        position: relative;
        z-index: 1;
        transition: opacity 0.3s ease;
      }

      .login-button:hover span, .book-now-button:hover span {
        opacity: 0.85;
      }

      @keyframes bounce {
        0%   { transform: translateY(0); }
        50%  { transform: translateY(-5px); }
        100% { transform: translateY(0); }
      }
    </style>
  </head>

  <body class="bg-gradient-to-br from-blue-900 via-blue-800 to-gray-900 text-white">
    <!-- Navbar -->
    <header class="bg-blue-950 shadow-lg sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
        <div class="flex items-center gap-3">
          <img src="https://cdn-icons-png.flaticon.com/512/888/888879.png" class="h-10" alt="Logo" />
          <h1 class="text-3xl font-bold title-font text-cyan-400">New_world Packers</h1>
        </div>
        <nav class="space-x-6 hidden md:block">
          <a href="#home" class="nav-item">Home</a>
          <a href="#about" class="nav-item">About</a>
          <a href="#services" class="nav-item">Services</a>
          <a href="#reviews" class="nav-item">Reviews</a>
          <a href="#contact" class="nav-item">Contact</a>

          <% if (user) { %>
            <div class="relative inline-block">
              <!-- Dropdown toggle button -->
              <button id="menu-button" class="w-10 h-10 flex items-center justify-center bg-cyan-400 text-black rounded-full focus:outline-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
              </button>
              <!-- Dropdown menu -->
              <ul id="menu-options" class="absolute right-0 mt-2 w-48 bg-blue-800 text-white rounded-lg shadow-lg hidden">
                <li><a href="/dashboard" class="block px-4 py-2 hover:bg-blue-700">Dashboard</a></li>
                <li><a href="/order" class="block px-4 py-2 hover:bg-blue-700">Book Now</a></li>
                <li><a href="/logout" class="block px-4 py-2 hover:bg-blue-700">Logout</a></li>
              </ul>
            </div>
          <% } else { %>
            <a href="/login" class="login-button"><span>Login</span></a>
          <% } %>
        </nav>
      </div>
    </header>

    <!-- Hero Section -->
    <section id="home" class="h-screen bg-cover bg-center bg-no-repeat text-white flex items-center justify-center relative" style="background-image: url('https://images.unsplash.com/photo-1589571894960-20bbe2828d0a?auto=format&fit=crop&w=1470&q=80');">
      <div class="absolute inset-0 bg-black bg-opacity-70 backdrop-blur-sm"></div>
      <div class="text-center relative z-10 p-6 rounded-xl" data-aos="fade-up">
        <% if (message) { %>
          <div class="bg-green-500 text-white p-4 rounded mb-6">
            <%= message %>
          </div>
        <% } %>
        <h2 class="text-6xl font-bold mb-4 title-font text-cyan-400 drop-shadow-[0_4px_4px_rgba(0,0,0,0.6)]">Safe. Fast. Reliable.</h2>
        <p class="text-xl text-gray-300 mb-6">Your trusted partner in moving across India</p>
        <% if (user) { %>
          <% if (!user.isAdmin) { %>
            <a href="/order" class="book-now-button"><span>Get a Quote</span></a>
          <% } %>
        <% } else { %>
          <a href="/login?redirect=/order" class="login-button"><span>Get a Quote</span></a>
        <% } %>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-20">
      <div class="max-w-6xl mx-auto px-6 grid md:grid-cols-2 gap-10 items-center">
        <div data-aos="fade-right">
          <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?auto=format&fit=crop&w=870&q=80" alt="About Us" class="rounded-lg shadow-xl w-full object-cover h-80 md:h-full transform hover:scale-105 transition duration-500" />
        </div>
        <div data-aos="fade-left">
          <h2 class="text-4xl font-bold text-cyan-400 mb-4 title-font">About Us</h2>
          <p class="text-gray-300 leading-relaxed">
            New_world Packers & Movers is committed to providing hassle-free, secure, and fast-moving services across India.
            With a trained staff and well-equipped infrastructure, we ensure your move is smooth from start to end.
          </p>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="py-20 bg-blue-950">
      <div class="max-w-6xl mx-auto px-6 text-center">
        <h2 class="text-4xl font-bold text-cyan-400 mb-12 title-font">Our Services</h2>
        <div class="grid md:grid-cols-3 gap-10">
          <div class="bg-blue-900 p-6 rounded-lg shadow-2xl transform hover:rotate-2 hover:scale-105 transition duration-500">
            <h3 class="text-2xl font-bold mb-2 text-white">Home Relocation</h3>
            <p class="text-gray-300">Safe and secure shifting of your household items anywhere in India.</p>
          </div>
          <div class="bg-blue-900 p-6 rounded-lg shadow-2xl transform hover:-rotate-2 hover:scale-105 transition duration-500">
            <h3 class="text-2xl font-bold mb-2 text-white">Office Shifting</h3>
            <p class="text-gray-300">Professional handling and transportation of office infrastructure.</p>
          </div>
          <div class="bg-blue-900 p-6 rounded-lg shadow-2xl transform hover:rotate-2 hover:scale-105 transition duration-500">
            <h3 class="text-2xl font-bold mb-2 text-white">Vehicle Transport</h3>
            <p class="text-gray-300">Reliable bike and car shifting services with utmost care.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Reviews Section -->
    <section id="reviews" class="py-20">
      <div class="max-w-6xl mx-auto px-6 text-center">
        <h2 class="text-4xl font-bold text-cyan-400 mb-10 title-font">What Our Customers Say</h2>
        <div class="grid md:grid-cols-3 gap-6">
          <div class="bg-blue-800 p-6 rounded-lg shadow-md transform hover:scale-105 transition duration-500" data-aos="fade-up">
            <p class="text-gray-200">"Excellent service and professional team. My move was stress-free!"</p>
            <h4 class="mt-4 font-semibold text-cyan-300">- Rakesh Kumar</h4>
          </div>
          <div class="bg-blue-800 p-6 rounded-lg shadow-md transform hover:scale-105 transition duration-500" data-aos="fade-up" data-aos-delay="100">
            <p class="text-gray-200">"Affordable and timely delivery. Highly recommended!"</p>
            <h4 class="mt-4 font-semibold text-cyan-300">- Priya Mehta</h4>
          </div>
          <div class="bg-blue-800 p-6 rounded-lg shadow-md transform hover:scale-105 transition duration-500" data-aos="fade-up" data-aos-delay="200">
            <p class="text-gray-200">"Very careful with packaging and moving fragile items."</p>
            <h4 class="mt-4 font-semibold text-cyan-300">- Arjun Singh</h4>
          </div>
        </div>
      </div>
    </section>

    <!-- Achievements Section -->
    <section class="py-20 bg-blue-900">
      <div class="max-w-6xl mx-auto px-6 text-center">
        <h2 class="text-4xl font-bold text-cyan-400 mb-10 title-font">Our Achievements</h2>
        <div class="grid md:grid-cols-4 gap-8">
          <div class="transform hover:scale-110 transition duration-500">
            <h3 class="text-3xl font-bold text-cyan-300">5K+</h3>
            <p class="text-gray-300">Orders Completed</p>
          </div>
          <div class="transform hover:scale-110 transition duration-500">
            <h3 class="text-3xl font-bold text-cyan-300">4.9★</h3>
            <p class="text-gray-300">Average Rating</p>
          </div>
          <div class="transform hover:scale-110 transition duration-500">
            <h3 class="text-3xl font-bold text-cyan-300">300+</h3>
            <p class="text-gray-300">Cities Covered</p>
          </div>
          <div class="transform hover:scale-110 transition duration-500">
            <h3 class="text-3xl font-bold text-cyan-300">24/7</h3>
            <p class="text-gray-300">Customer Support</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Info -->
    <section id="contact" class="py-20 bg-gray-900 text-white">
      <div class="max-w-6xl mx-auto px-6 text-center">
        <h2 class="text-4xl font-bold text-cyan-400 mb-6 title-font">Get In Touch</h2>
        <p class="text-lg">Call us at <strong>+91-9876543210</strong> or email <strong>support@newworldpackers.com</strong></p>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-black text-white py-6 text-center text-sm">
      <p>&copy; 2025 New_world Packers and Movers. All rights reserved (TVK).</p>
    </footer>

    <!-- AOS Init -->
    <script>
      AOS.init();
    </script>

    <script>
      // Toggle dropdown menu
      const menuButton = document.getElementById('menu-button');
      const menuOptions = document.getElementById('menu-options');

      if (menuButton) {
        menuButton.addEventListener('click', () => {
          menuOptions.classList.toggle('hidden'); // Toggle the visibility of the dropdown menu
        });

        // Close the menu if clicked outside
        document.addEventListener('click', (event) => {
          if (!menuButton.contains(event.target) && !menuOptions.contains(event.target)) {
            menuOptions.classList.add('hidden'); // Hide the dropdown menu
          }
        });
      }
    </script>
  </body>
</html>
