<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login | New_world Packers</title>

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- AOS Animation -->
  <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css" />
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

  <!-- Custom CSS -->
  <style>
    .glass {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(10px);
      border-radius: 1rem;
      box-shadow: 0 0 20px rgba(0,0,0,0.5);
    }
  </style>
</head>

<body class="bg-gradient-to-br from-black via-gray-900 to-black min-h-screen text-white">
  <%- include('partials/header') %>

  <div class="flex items-center justify-center py-16">   
    <div class="glass p-10 max-w-md w-full mx-auto" data-aos="fade-up">
      <h2 class="text-3xl font-bold text-center mb-8 text-cyan-400">Login to Your Account</h2>

      <% if (error) { %>
        <div class="bg-red-500 text-white p-2 rounded mb-4 text-center">
          <%= error %>
        </div>
      <% } %>

      <form action="/auth/login" method="POST" class="space-y-6">
        <input type="hidden" name="redirect" value="<%= redirect %>">

        <div>
          <label for="email" class="block mb-1 text-sm">Email</label>
          <input type="email" name="email" id="email" required class="w-full px-4 py-2 rounded bg-gray-800 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-cyan-500"/>
        </div>

        <div class="relative">
          <label for="password" class="block mb-1 text-sm">Password</label>
          <input type="password" name="password" id="password" required class="w-full px-4 py-2 rounded bg-gray-800 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-cyan-500" />
          <span class="absolute right-3 top-10 cursor-pointer text-cyan-400 transition-transform duration-300" onclick="togglePassword('password', this)">
            <svg id="eye-icon-password" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path id="eye-open" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path id="eye-closed" class="hidden" d="M3.98 8.223A10.477 10.477 0 0112 5c3.93 0 7.41 2.243 9.02 5.223M21 21l-6-6m-3 3a3 3 0 01-3-3m0 0a3 3 0 013-3m0 0a3 3 0 013 3m0 0a3 3 0 01-3 3" />
            </svg>
          </span>
        </div>

        <button type="submit" class="w-full bg-cyan-500 hover:bg-cyan-600 text-white font-semibold py-2 rounded transition">
          Login
        </button>
      </form>

      <p class="mt-6 text-center text-sm text-gray-300">
        Don't have an account?
        <a href="/register" class="text-cyan-400 hover:underline">Register</a>
      </p>
    </div>
  </div>

  <script>
    AOS.init();

    function togglePassword(fieldId, iconElement) {
      const field = document.getElementById(fieldId);
      const eyeOpen = iconElement.querySelector('#eye-open');
      const eyeClosed = iconElement.querySelector('#eye-closed');

      if (field.type === 'password') {
        field.type = 'text';
        eyeOpen.classList.add('hidden');
        eyeClosed.classList.remove('hidden');
      } else {
        field.type = 'password';
        eyeOpen.classList.remove('hidden');
        eyeClosed.classList.add('hidden');
      }
    }
  </script>
</body>
</html>
